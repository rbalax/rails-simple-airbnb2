
<h1>All our flats for rent (<%= Flat.count %>)</h1>

<div class="container">
  <div class="row justify-content-center">
  <% @flats.each do |flat| %>
    <div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= flat.name %></h5>
    <p class="card-text"> Address: <%= flat.address %></p>
    <p class="card-text"> Description: <%= flat.description %></p>
    <p class="card-text"> <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>  <i class="fa-solid fa-people-group"></i> <%= flat.number_of_guests %> </p>
  </div>
  <div class="btn-actions">
    <div><%= link_to "Edit", edit_flat_path(flat), :class => "btn btn-outline-primary"%></div>
    <div><%= link_to "Add a flat", new_flat_path, :class => "btn btn-outline-warning" %></div>
    <div><%= link_to "All flats", flats_path, :class => "btn btn-outline-success" %></div>
    <div><%= link_to "Delete", flat_path(flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} , :class => "btn btn-outline-danger"  %></div>
  </div>
</div>
  <% end %>
    </div>
  </div>
